{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./build/",
    "noEmit": true,
    "paths": {
      "@shared/*": ["./workspaces/shared/*"],
      "@website/*": ["./workspaces/website/*"]
    },
    "allowJs": true,
    "allowUnreachableCode": false,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "jsx": "preserve",
    "target": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "esnext",
    "lib": [
      "es6",
      "dom",
      "es2017"
    ],
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      },
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "files": [
    "./typings/index.d.ts"
  ],
  "include": [
    "workspaces/**/*"
  ],
  "exclude": [
    ".config/**/*",
    ".templates/**/*"
  ]
}
